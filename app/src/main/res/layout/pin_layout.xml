<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pinModel"
            type="com.masiad.arescaperoom.model.PinModel" />
    </data>

    <merge>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.AREscapeRoom.CardView.Alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin_normal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pin_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:layout_constraintEnd_toEndOf="@id/key_3"
                    app:layout_constraintStart_toStartOf="@id/key_1"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="@={pinModel.pin}"
                        android:textAppearance="?attr/textAppearanceHeadline4"
                        tools:text="1234" />

                </com.google.android.material.textfield.TextInputLayout>

                <include
                    android:id="@+id/key_1"
                    clickListener="@{() -> pinModel.onKeyClick(`1`)}"
                    key="@{`1`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layout_constraintEnd_toStartOf="@id/key_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pin_input" />

                <include
                    android:id="@+id/key_2"
                    clickListener="@{() -> pinModel.onKeyClick(`2`)}"
                    key="@{`2`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_1"
                    app:layout_constraintEnd_toStartOf="@id/key_3"
                    app:layout_constraintStart_toEndOf="@id/key_1"
                    app:layout_constraintTop_toTopOf="@id/key_1" />

                <include
                    android:id="@+id/key_3"
                    clickListener="@{() -> pinModel.onKeyClick(`3`)}"
                    key="@{`3`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/key_2"
                    app:layout_constraintTop_toTopOf="@id/key_1" />

                <include
                    android:id="@+id/key_4"
                    clickListener="@{() -> pinModel.onKeyClick(`4`)}"
                    key="@{`4`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/key_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/key_1" />

                <include
                    android:id="@+id/key_5"
                    clickListener="@{() -> pinModel.onKeyClick(`5`)}"
                    key="@{`5`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_4"
                    app:layout_constraintEnd_toStartOf="@id/key_6"
                    app:layout_constraintStart_toEndOf="@id/key_4"
                    app:layout_constraintTop_toTopOf="@id/key_4" />

                <include
                    android:id="@+id/key_6"
                    clickListener="@{() -> pinModel.onKeyClick(`6`)}"
                    key="@{`6`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/key_5"
                    app:layout_constraintTop_toTopOf="@id/key_4" />

                <include
                    android:id="@+id/key_7"
                    clickListener="@{() -> pinModel.onKeyClick(`7`)}"
                    key="@{`7`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/key_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/key_4" />

                <include
                    android:id="@+id/key_8"
                    clickListener="@{() -> pinModel.onKeyClick(`8`)}"
                    key="@{`8`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_7"
                    app:layout_constraintEnd_toStartOf="@id/key_9"
                    app:layout_constraintStart_toEndOf="@id/key_7"
                    app:layout_constraintTop_toTopOf="@id/key_7" />

                <include
                    android:id="@+id/key_9"
                    clickListener="@{() -> pinModel.onKeyClick(`9`)}"
                    key="@{`9`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/key_8"
                    app:layout_constraintTop_toTopOf="@id/key_7" />

                <include
                    android:id="@+id/key_star"
                    clickListener="@{() -> pinModel.onKeyClick(`*`)}"
                    key="@{`*`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/key_0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/key_7" />

                <include
                    android:id="@+id/key_0"
                    clickListener="@{() -> pinModel.onKeyClick(`0`)}"
                    key="@{`0`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_star"
                    app:layout_constraintEnd_toStartOf="@id/key_hash"
                    app:layout_constraintStart_toEndOf="@id/key_star"
                    app:layout_constraintTop_toTopOf="@id/key_star" />

                <include
                    android:id="@+id/key_hash"
                    clickListener="@{() -> pinModel.onKeyClick(`#`)}"
                    key="@{`#`}"
                    layout="@layout/pin_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/key_star"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/key_0"
                    app:layout_constraintTop_toTopOf="@id/key_star" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </merge>
</layout>