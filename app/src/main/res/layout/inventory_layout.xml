<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="isVisible"
            type="Boolean" />

        <variable
            name="isToggle"
            type="Boolean" />

        <variable
            name="toggleClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <merge>

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            visibility="@{isVisible}"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">

            <LinearLayout
                inventoryListTranslateX="@{isToggle}"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/inventory_arrow_size_half"
                android:background="?attr/colorSurface"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/baloo_thambi"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingHorizontal="@dimen/margin_extra_small"
                    android:text="@string/inventory"
                    android:textAllCaps="true" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="@dimen/inventory_list_width"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/inventory_item" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/toggle_arrow_card"
                inventoryToggleTranslateX="@{isToggle}"
                android:layout_width="@dimen/inventory_arrow_size"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:elevation="8dp"
                app:cardCornerRadius="0dp"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/toggle_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:onClick="@{toggleClickListener}"
                    android:scaleType="centerCrop"
                    android:src="@{isToggle ? @drawable/ic_round_keyboard_arrow_right : @drawable/ic_round_keyboard_arrow_left}"
                    tools:src="@drawable/ic_round_keyboard_arrow_right" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </merge>
</layout>