<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AREscapeRoom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Full screen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
        <!-- Custom Button-->
        <item name="materialButtonStyle">@style/Widget.AREscapeRoom.Button</item>
        <item name="imageButtonStyle">@style/Widget.AREscapeRoom.ImageButton</item>
        <!-- Custom Snackbar -->
        <item name="snackbarStyle">@style/Widget.AREscapeRoom.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.AREscapeRoom.Snackbar.TextView</item>
    </style>

    <!-- MaterialCardView Alert style -->
    <style name="Widget.AREscapeRoom.CardView.Alert" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/alert_corner_radius</item>
        <item name="contentPadding">@dimen/margin_normal</item>
    </style>
</resources>